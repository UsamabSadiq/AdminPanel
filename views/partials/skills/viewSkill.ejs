<div class="container-fluid px-4">
    <h1 class="mt-4">Skills</h1>
    <ol class="breadcrumb mb-4">
        <!-- <li class="breadcrumb-item">
        <a href="/home">Dashboard</a>
      </li> -->
        <li class="breadcrumb-item active">Dashboard/Skill/View Skills</li>
    </ol>
    <table id="datatablesSimple">
        <thead>
            <tr>
                <th>Skill Name</th>
                <th>Service Value</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <!-- jo ham na final variable bnaya tha jis ma saara data store ho rha ha us variable ka naam aye ga .length
            sa pehly  -->
                <% if(skill.length> 0){ %> <% skill.forEach(skill=>{ %>
                        <td>
                            <!-- "." k baad jo SkillName ha wo schema ma ham na define kra tha us ka name ha -->
                            <%= skill.SkillName %>
                        </td>
                        <td>
                            <%= skill.SkillValue %>
                        </td>
                        <td>
                            <a href="/viewskill/delete/<%= skill._id %>" class="btn btn-danger btn-block">Delete</a>
                            <a href="/viewskill/edit/<%= skill._id %>" class="btn btn-primary btn-block">Edit</a>
                        </td>
            </tr>
            <% }) %>
                <% } %>
        </tbody>
    </table>
</div>