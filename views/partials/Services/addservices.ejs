<form method="post">
  <div class="row mb-3">
    <div class="col-md-6">
      <div class="form-floating mb-3 mb-md-0">
        <input class="form-control" id="inputFirstName" type="text" name="ServiceName"
          placeholder="Enter your first name" />
        <label for="inputFirstName">Service Name</label>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-floating">
        <input class="form-control" id="inputLastName" name="ServiceDesc" type="text"
          placeholder="Enter your last name" />
        <label for="inputLastName">Service Description</label>
      </div>
    </div>
  </div>
  <div class="mt-4 mb-0">
    <div class="d-grid">
      <button class="btn btn-primary btn-block" href="/addservices" type="submit">
        Add Services
      </button>
    </div>
  </div>
</form>

